@page "/Login"
@using CatamaranBlazor.Models

@code {
    LoginModel model = new LoginModel();

    private void CallLogin()
    { 
    
    }
}
<div class="login-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="form-container">
                    <EditForm Model="model" OnValidSubmit="@CallLogin">
                        <h2 class="text-center">Login</h2>
                        <br />
                        <p class="text-center"><InputText placeholder="User Name" id="username" @bind-Value="model.Username" /></p>
                        <br />
                        <p class="text-center"><InputText type="password" placeholder="Password" id="password" @bind-Value="model.Password" /></p>
                        <br />

                        <div class=" text-center">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                        </div>
                        <br />
                        <div class="text-center"><button class="btn btn-info" type="submit">Go !</button></div>
                    </EditForm>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>
